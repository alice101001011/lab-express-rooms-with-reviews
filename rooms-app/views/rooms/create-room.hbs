  </div> --}}

   <div class="mb-3">
    <label for="imageUpload" class="form-label">Image Upload</label>
    <input type="file" class="form-control-file" id="imageUpload" name="imageUpload" />
  </div>


  <button type="submit" class="btn btn-sm btn-outline-dark">Create new room</button>
  
</form>
<a href="/rooms" class="btn btn-sm btn-outline-dark">Go back</a>
