<h1>Details for room {{name}}</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9">

<h3>Name: {{name}}</h3>
<p>Owner: {{owner.fullName}}</p>
<p>Description: {{description}}</p>
<img src="{{imageUrl}}" alt="" />
<hr>

<h3>Reviews: </h3>

<ul class="list-group list-group-flush">
  {{#each reviews}}
    <li class="list-group-item">
      <p>{{this.comment}}</p>
      <p>{{this.user.fullName}}</p>

      {{#if isLoggedIn}}
      <a
        href="/reviews/{{this._id}}/edit-review"
        type="button"
        class="btn btn-sm btn-outline-dark"
      >Edit review</a>
      <form action="/reviews/{{this._id}}/delete-review" method="POST">
        <button class="btn btn-sm btn-outline-dark">Delete review</button>
      </form>
    </li>
    {{/if}}
  {{/each}}
</ul>

{{#if isLoggedIn}}
<a
  href="/reviews/{{_id}}/review"
  type="button"
  class="btn btn-sm btn-outline-dark"
>Create review</a>
{{/if}}


<a href="/rooms" class="btn btn-sm btn-outline-dark">Go back</a>

</div>

    </div>
</div>
</div>